<div class="message-box @Position">
    <MudAvatar Class="message-box__user-img" Image="@ImageUrl" />

    <div class="message-box__content">
        <div class="message-box__message">
            <div class="message-box__message__text">
                @ChildContent
            </div>
            <span class="message-box__message__time">@Time</span>
        </div>
        <div class="message-box__name">
            <strong>@SenderName</strong>
        </div>
    </div>

    <MudMenu Icon="@Icons.Material.Filled.MoreVert" Class="message-box__menu"
                AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopRight">
        <MudMenuItem>Edit</MudMenuItem>
        <MudMenuItem>Action</MudMenuItem>
    </MudMenu>
</div>

@code {
    [Parameter]
    public string ImageUrl { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string SenderName { get; set; }

    [Parameter]
    public string Time { get; set; }

    [Parameter]
    public string Position { get; set; } = "";
}
